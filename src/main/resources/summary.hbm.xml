<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.springapp.mvc.model.Account" table="accounts">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="residentId" type="string" column="resident_id">
        </id>
        <property name="amount" type="double" column="amount"/>
        <property name="amountBlocked" type="double" column="amount_blocked"/>
        <property name="bonusBitcoins" type="double" column="bonus_bitcoins"/>
    </class>
</hibernate-mapping>